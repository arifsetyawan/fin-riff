{
  "name": "fin-riff",
  "version": "0.1.0",
  "description": "Financial-safe reference generator with persistence support",
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "prepublishOnly": "pnpm run test && pnpm run build",
    "version": "pnpm run test && git add -A",
    "postversion": "git push && git push --tags",
    "release": "pnpm run test && pnpm run build && npm publish",
    "release:dry": "pnpm run test && pnpm run build && npm publish --dry-run"
  },
  "keywords": [
    "reference",
    "id",
    "generator",
    "financial",
    "safe",
    "persistence"
  ],
  "author": "Arif Setyawan <me@arifsetyawan.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/arifsetyawan/fin-riff.git"
  },
  "homepage": "https://github.com/arifsetyawan/fin-riff#readme",
  "bugs": {
    "url": "https://github.com/arifsetyawan/fin-riff/issues"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.5.2",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/redis": "^4.0.11",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "ioredis": "^5.0.0",
    "redis": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    },
    "redis": {
      "optional": true
    }
  }
}